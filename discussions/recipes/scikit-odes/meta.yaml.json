    "line" : 17,
    "diffHunk" : "@@ -1,1 +15,19 @@  # so remove it.\n  script:\n    - \"/bin/rm -f pyproject.toml\"\n    - \"{{ PYTHON }} -m pip install . -vv\"\n"
  },
